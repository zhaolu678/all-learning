<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.luchao.springbootmybatis.mapper.UsersMapper">
    <insert id="insterUser" parameterType="User">
        insert into user(username,age) values (#{username},#{age})
    </insert>
    <select id="getAllUser" resultType="User">
        select id,username,age from user
    </select>
    <delete id="deleteUser">
        delete from user where id=#{id}
    </delete>
    <update id="updateUser" parameterType="User">
        update user set username=#{username },age=#{age} where id=#{id}
    </update>
    <select id="findUserById" resultType="User">
        select id,username,age from user where id=#{id}
    </select>

</mapper>